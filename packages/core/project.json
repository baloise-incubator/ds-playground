{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "BAL_DEVELOPMENT=true stencil build --dev --serve --watch --port=4000"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "BAL_DEVELOPMENT=true stencil build --serve --watch --port=3333"
      }
    },
    "build": {
      "executor": "@baloise/ds-nx:build-core",
      "outputs": [
        "{projectRoot}/.stencil",
        "{projectRoot}/components",
        "{projectRoot}/dist",
        "{projectRoot}/loader",
        "{projectRoot}/www",
        "{projectRoot}/icons"
      ],
      "options": {
        "projectRoot": "{projectRoot}"
      }
    }
  },
  "tags": []
}
